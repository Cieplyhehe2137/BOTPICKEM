            <th>UserID</th>
            <th>Punkty</th>
        </tr>
        <% scores.forEach((entry, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= entry.userId %></td>
                <td><%= entry.total %> pkt</td>
            </tr>
        <% }) %>
    </table>

    <h2>Lista wszystkich pickÃ³w</h2>
